<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="275dp">

                <ImageView
                    android:id="@+id/imgvSlide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mdl1home" />

                <Button
                    android:id="@+id/btnSlideesquerda"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/gradblack_transparent2"
                    android:text="&lt;"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnSlidedireita"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/gradblack_transparent1"
                    android:text="&gt;"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="200dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lytCntnrbcimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:id="@+id/imgvCaixa4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitCenter"
                                    tools:src="@tools:sample/avatars" />
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/txtvNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/exemplotexto" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtvTeste"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical" />

                    <TextView
                        android:id="@+id/txtvDisponibilidade"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="PRODUTO DISPONIVEL"
                        android:textColor="@color/verdedinheiro"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/borda10"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtvCnt1valordes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="de R$XX,XX para "
                        android:textAllCaps="false"
                        android:textColor="@color/vermelhodinheiro"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtvCnt1desconto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="No pix com XX% de desconto"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtvCnt1valor1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:gravity="right|center_vertical"
                            android:text="R$XX,XX"
                            android:textColor="@color/verdedinheiro"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtvCnt1quantcartao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="em ate XXx vezes sem juros no cartão"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtvCnt1valor2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:gravity="right|center_vertical"
                            android:text="R$XX,XX"
                            android:textColor="@color/vermelhodinheiro"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnAdicionacarrinho"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/cinzatema"
                    android:text="Adicionar ao Carrinho"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Desconto"
                            android:textColor="@color/cinzatema"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtvQuantdesconto"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@color/vermelhodinheiro"
                            android:gravity="center"
                            android:text="XX%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Vendido"
                            android:textColor="@color/cinzatema"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtvQuantvendido"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@color/black25"
                            android:gravity="center"
                            android:text="XX"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Disponivel"
                            android:textColor="@color/cinzatema"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtvQuantdisponivel"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@color/verdedinheiro"
                            android:gravity="center"
                            android:text="XX"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/white"
                    android:text="Descrição"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>