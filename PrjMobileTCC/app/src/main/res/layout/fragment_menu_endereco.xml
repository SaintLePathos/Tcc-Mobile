<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView80"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:background="@drawable/linhaarredondada"
            android:backgroundTint="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView58"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Opções" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEnderecopadrao"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/cinzatema"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            android:text="Usar endereço como padrão"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnApagarendereco"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/cinzatema"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            android:text="Apagar endereço"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvEnderecoinfomenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:text="TextView" />

    </LinearLayout>
</LinearLayout>